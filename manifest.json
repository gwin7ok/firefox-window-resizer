{
   "manifest_version": 2,
   "name": "Window Resizer",
   "version": "1.0.0",
   "description": "簡単にブラウザウィンドウのサイズと位置を変更できます",
   "icons": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "96": "assets/icons/icon-96.png"
   },
   "browser_action": {
      "default_icon": {
         "16": "assets/icons/icon-16.png",
         "32": "assets/icons/icon-32.png",
         "48": "assets/icons/icon-48.png"
      },
      "default_popup": "views/popup.html"
   },
   "background": {
      "scripts": ["scripts/background.js"]
   },
   "permissions": [
      "storage",
      "tabs",
      "contextMenus",  
      "scripting",
      "menus",
      "activeTab",
      "<all_urls>"
   ],
   "options_ui": {
      "page": "views/settings.html",
      "open_in_tab": true
   },
   "browser_specific_settings": {
      "gecko": {
         "id": "window-resizer@example.com",
         "strict_min_version": "57.0"
      }
   },
   "web_accessible_resources": [
      "views/popup.html",
      "views/settings.html",
      "views/preset-editor.html",
      "styles/*",
      "scripts/*",
      "images/*"
   ],
   "content_security_policy": "script-src 'self' https://app.unpkg.com; object-src 'self'"
}